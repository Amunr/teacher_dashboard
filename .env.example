# KEF Teacher Dashboard - Environment Configuration
# Copy this file to .env and customize the values for your environment

# Flask Environment (set to 'production' for deployment)
FLASK_ENV=production

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=change-this-to-a-secure-random-key-in-production-32-chars-minimum

# Database Configuration
DATABASE_URL=sqlite:///data.db

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/kef_app.log

# Optional: Redis for rate limiting (leave empty to use memory)
# REDIS_URL=redis://localhost:6379/0
